<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="true">
    	<shape
    		android:shape="rectangle" >
    		<stroke android:width="1px" android:color="#366680" />
   
		     <gradient
		        android:startColor="#e6e8e7"
		        android:endColor="#E0E0E0"
		        android:angle="-90" />     
		    <padding
		        android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="0dp"/>
		       
		</shape>
    </item>
    
   <item android:state_pressed="true">
        <shape
    	android:shape="rectangle" >
<stroke android:width="1px" android:color="#366680" />
          <gradient
		        android:startColor="#a7cc50"
		        android:endColor="#90b346"
		        android:angle="-90" />    
		     
		    <padding
		        android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="0dp"/>    
		</shape>
   </item>

</selector>