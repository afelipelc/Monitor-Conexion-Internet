<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
       <item android:state_enabled="false">
        <shape
    	android:shape="rectangle" >
		<stroke android:width="1px" android:color="#366680" />
          <gradient
		        android:startColor="#a7cc50"
		        android:endColor="#90b346"
		        android:angle="-90" />    
		     
		    <padding
		        android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="4dp"/>    
		</shape>
   </item>
   
    
    <item android:state_focused="true">
        <shape
    	android:shape="rectangle" >
   <stroke android:width="1px" android:color="#366680" />
		     <gradient
		        android:startColor="#42adf5"
		        android:endColor="#144bb8"
		        android:angle="90" />
		     
		    <padding
		        android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="4dp"/>    
		</shape>
   </item>

 <item android:state_pressed="true">
    	<shape
    		android:shape="rectangle" >
    		<stroke android:width="1px" android:color="#366680" />
   
		     <gradient
		        android:startColor="#42b3f5"
		        android:endColor="#1481b8"
		        android:angle="-90" />     
		    <padding
		        android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="4dp"/>
		       
		</shape>
    </item>
</selector>